    </changeSet>
    <changeSet author="jiwalker" id="1372360950095-3">
        <createTable tableName="full_summary">
            <column name="id" type="INT8">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="VARCHAR(64000)"/>
